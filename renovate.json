{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["config:base"],
  "kubernetes": {
    "fileMatch": ["(^|/)[^/]*\\.yaml$"]
  },
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "packagePatterns": [
        "^sourcegraph/"
      ],
      "groupName": "Sourcegraph Docker images",
      "ignoreUnstable": true,
      "semanticCommits": false,
      "reviewers": [
        "ggilmore"
      ],
      "extends": ["default:automergeDigest"]
    }
  ],
  "pinDigests": true
}
